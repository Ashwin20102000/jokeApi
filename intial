		async function ash()
		{
			const data = await fetch("http://api.icndb.com/jokes/random");
			const value = await data.json();
			// console.log(value.value.joke);
			const ash = document.getElementById('win');
			ash.innerHTML += `${value.value.joke}`;
		
		}
		ash();
